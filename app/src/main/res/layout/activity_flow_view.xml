<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.administrator.mytrain.view.ProcessImgView
        android:id="@+id/p1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.administrator.mytrain.view.ProcessImgView>
    <FrameLayout
        android:id="@+id/containerId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <com.example.administrator.mytrain.view.ProcessImgView
        android:id="@+id/p2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.administrator.mytrain.view.ProcessImgView>
    <com.example.administrator.mytrain.view.ProcessImgView
        android:id="@+id/p3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.administrator.mytrain.view.ProcessImgView>
    <com.example.administrator.mytrain.view.NoScrollViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.example.administrator.mytrain.view.NoScrollViewPager>

</LinearLayout>